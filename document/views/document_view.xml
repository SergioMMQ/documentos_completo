<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="documentos_documentos_view_tree" model="ir.ui.view">
        <field name="name">documentos.documentos.view.tree</field>
        <field name="model">documentos.documentos</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="documento" />                
            </tree>
        </field>
    </record>

    <record id="documentos_documentos_view_kanban" model="ir.ui.view">
        <field name="name">documentos.documentos.view.kanban</field>
        <field name="model">documentos.documentos</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row">
                                
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <field name="carpeta" />
                                    <field name="documento" widget="pdf_viewer"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="documentos_documentos_view_form" model="ir.ui.view">
        <field name="name">documentos.documentos.view.form</field>
        <field name="model">documentos.documentos</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="carpeta" />
                    </group>
                    <group>
                        <field name="documento" widget="pdf_viewer"/>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>

     <!--
    <record id="documentos_documentos_view_search" model="ir.ui.view">
        <field name="name">documentos.documentos.view.search</field>
        <field name="model">documentos.documentos</field>
        <field name="arch" type="xml">
            <search>
                <searchpanel>
                    <field name="carpeta" icon="fa fa-file"/>
                </searchpanel>
            </search>
        </field>
    </record>
    -->

    <record id="act_documentos_documentos" model="ir.actions.act_window">
        <field name="name">Documentos</field>
        <field name="res_model">documentos.documentos</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="documentos_documentos_view_kanban"/>
    </record>
    
</odoo>