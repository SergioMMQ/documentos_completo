<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="documentos_carpetas_view_tree" model="ir.ui.view">
        <field name="name">documentos.carpetas.view.tree</field>
        <field name="model">documentos.carpetas</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>           
                <field name="nombre_completo"/>
                <field name="carpeta_padre"/> 
            </tree>
        </field>
    </record>

    <record id="documentos_carpetas_view_form" model="ir.ui.view">
        <field name="name">documentos.carpetas.view.form</field>
        <field name="model">documentos.carpetas</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="nombre_completo"/>
                        <field name="carpeta_padre"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="act_documentos_carpetas" model="ir.actions.act_window">
        <field name="name">Carpetas</field>
        <field name="res_model">documentos.carpetas</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="documentos_carpetas_view_tree"/>
    </record>
    

</odoo>


